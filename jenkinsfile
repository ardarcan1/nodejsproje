pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('DOCKERHUB_CREDENTIALS')
        IMAGE_NAME = 'nodejsarda' // Docker Hub'daki imaj adınız
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/ardarcan1/nodejsproje', branch: 'master'
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:${env.VERSION}")
                }
            }
        }

        stage('Determine Version') {
            steps {
                script {
                    // Versiyon numarasını bir dosyadan oku veya varsayılan değeri kullan
                    def version = readFile('version.txt').trim()
                    env.VERSION = "v${version}"
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'DOCKERHUB_CREDENTIALS') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Update Version') {
            steps {
                script {
                    // Versiyon numarasını artır ve dosyaya yaz
                    def version = readFile('version.txt').trim().toInteger() + 1
                    writeFile file: 'version.txt', text: "${version}"
                }
            }
        }
    }
}
